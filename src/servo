#pragma once
#include <Arduino.h>

namespace HeraCross
{

class PulseServo
{
    private:
    int pin,maxAngle,minAngle,pulse_width;
    public:
    PulseServo(int _pin,int _maxAngle, int _minAngle)
    {
        pin=_pin;
        maxAngle=_maxAngle;
        minAngle=_minAngle;
        digitalWrite(pin,1);
    }
    virtual void SetPulse(int pulse)
    {
        // pulse_width=pulse_in_100us;
        digitalWrite(pin,1);
        delayMicroseconds(pulse);
        digitalWrite(pin,0);
        delay(20-pulse_width/1000);
    }
    void SetPulse(int pulse,int rep)
    {
        while(rep--)
        {
            SetPulse(pulse);
        }
    }
    virtual void SetAngle(int angle,int rep)
    {
        SetPulse(((angle*11)+500),rep);
    }
    void TurnMax(int rep=100)
    {
        SetAngle(maxAngle,rep);
    }
    void TurnMin(int rep=100)
    {
        SetAngle(minAngle,rep);
    }
};
class DutyServo 
{
    private:
    int pin,maxAngle,minAngle,pulse_width;
    public:
    DutyServo(int _pin,int _maxAngle, int _minAngle)
    {
        pin=_pin;
        maxAngle=_maxAngle;
        minAngle=_minAngle;
        digitalWrite(pin,1);
    }
    void SetPulse(int pulse)
    {
        analogWrite(pin,pulse);
    }
    void TurnMax()
    {
        SetPulse(maxAngle);
    }
    void TurnMin()
    {
        SetPulse(minAngle);
    }
};

}